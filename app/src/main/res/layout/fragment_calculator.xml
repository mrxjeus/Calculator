<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_view_in_put"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:background="#BBBBBB"
        android:textSize="@dimen/sp_25"/>
    <TextView
        android:id="@+id/text_view_out_put"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:background="#BBBBBB"
        android:textSize="@dimen/sp_25"
        android:gravity="end|center_vertical"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5"
        >
        <Button
            android:id="@+id/button_del"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/DEL"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_neg_pos"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/sign"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border" />
        <Button
            android:id="@+id/button_percent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/percent"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border" />
        <Button
            android:id="@+id/button_div"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/div"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border_btn_left"/>
        <Button
            android:id="@+id/button_7"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number7"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_8"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number8"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_9"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number9"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border" />
        <Button
            android:id="@+id/button_mul"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/mul"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border_btn_left" />
        <Button
            android:id="@+id/button_4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number4"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number5"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number6"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_sub"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/sub"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border_btn_left"/>
        <Button
            android:id="@+id/button_1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number1"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number2"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number3"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_add"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/add"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border_btn_left"/>
        <Button
            android:id="@+id/button_ac"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/AC"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/number0"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/button_dot"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/dot"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/button_result"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/result"
            android:textColor="#000000"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/border_btn_left"/>
    </GridLayout>
</LinearLayout>
